{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "importHelpers": false,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  
  "exclude": ["node_modules", "dist"]
}
